<p id="notice"><%= notice %></p>

<h1>Flights</h1>

<table>
  <thead>
    <tr>
      <th>Air connection</th>
      <th>Departure time</th>
      <th>Arrival time</th>
      <th>Economy seat price</th>
      <th>buisness seat price</th>
      <th>First class seat price</th>
      <th>Flying time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.air_connection_id %></td>
        <td><%= flight.departure_time %></td>
        <td><%= flight.arrival_time %></td>
        <td><%= flight.economy_seat_price %></td>
        <td><%= flight.buisness_seat_price %></td>
        <td><%= flight.first_class_seat_price %></td>
        <td><%= flight.flying_time %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

